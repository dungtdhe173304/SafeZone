<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SafeZone"
        tools:ignore="ExtraText">


        <activity
            android:name=".view.auth.LoginActivity"
            android:exported="true">
            android:theme="@style/Theme.SafeZone.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity -->
        <activity
            android:name=".view.MainActivity"
            android:exported="false" />


        <!-- Admin Main Activity -->
        <activity
            android:name=".view.admin.AdminMainActivity"
            android:exported="false" />

        <!-- Admin User Management Activity -->
        <activity
            android:name=".view.admin.UserManagementActivity"
            android:exported="false"
            android:theme="@style/Theme.SafeZone" />

        <!-- Admin Product Management Activity -->
        <activity
            android:name=".view.admin.ProductManagementActivity"
            android:exported="false"
            android:theme="@style/Theme.SafeZone" />

        <!-- Admin Order Management Activity -->
        <activity
            android:name=".view.admin.OrderManagementActivity"
            android:exported="false"
            android:theme="@style/Theme.SafeZone" />

        <!-- Admin Reports Activity -->
        <activity
            android:name=".view.admin.ReportsActivity"
            android:exported="false"
            android:theme="@style/Theme.SafeZone" />

        <!-- Auction Registration Activity -->
        <activity
            android:name=".view.AuctionRegistrationActivity"
            android:exported="false"
            android:theme="@style/Theme.SafeZone" />

        <!-- Auction Room Activity -->
        <activity
            android:name=".view.AuctionRoomActivity"
            android:exported="false"
            android:theme="@style/Theme.SafeZone" />

        <!-- Admin Auction Approval Activity -->
        <activity
            android:name=".view.AdminAuctionApprovalActivity"
            android:exported="false"
            android:theme="@style/Theme.SafeZone" />

        <!-- Auction Detail Activity -->
        <activity
            android:name=".view.AuctionDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.SafeZone" />

        <!-- User Auction Management Activity -->
        <activity
            android:name=".view.UserAuctionManagementActivity"
            android:exported="false"
            android:theme="@style/Theme.SafeZone" />

        <!-- Edit Auction Activity -->
        <activity
            android:name=".view.EditAuctionActivity"
            android:exported="false"
            android:theme="@style/Theme.SafeZone" />

    </application>

</manifest>