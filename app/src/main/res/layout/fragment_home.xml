<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".view.home.HomeFragment">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Enhanced Search Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_toolbar"
                android:elevation="4dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <!-- Common Header Include -->
                <include
                    layout="@layout/common_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"/>

                <!-- Advanced Search Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <!-- Enhanced Search Bar -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/search_background"
                        android:paddingHorizontal="12dp"
                        android:elevation="2dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_search"
                            android:layout_marginEnd="10dp"
                            app:tint="@android:color/darker_gray" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSearchProduct"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="Tìm kiếm sản phẩm, đấu giá..."
                            android:inputType="text"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:background="@android:color/transparent"
                            android:textColorHint="@android:color/darker_gray" />

                        <ImageButton
                            android:id="@+id/btnClearSearch"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@android:drawable/ic_menu_close_clear_cancel"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:visibility="gone"
                            app:tint="@android:color/darker_gray" />
                    </LinearLayout>

                    <!-- Action Buttons -->
                    <Button
                        android:id="@+id/btnSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:text="Tìm"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@color/primary_color"
                        android:textSize="12sp" />

                    <ImageButton
                        android:id="@+id/btnFilter"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="8dp"
                        android:src="@android:drawable/ic_menu_sort_by_size"
                        android:background="@drawable/circle_background"
                        android:padding="10dp"
                        app:tint="@android:color/white" />
                </LinearLayout>
            </LinearLayout>

            <!-- Main Content Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Quick Actions Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    android:background="@drawable/modern_card_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bán sản phẩm của bạn"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chia sẻ sản phẩm với cộng đồng SafeZone"
                                android:textSize="12sp"
                                android:textColor="@android:color/darker_gray" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnOpenAddProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="+ Đăng bài"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:background="@drawable/rounded_button_background"
                            android:textColor="@android:color/holo_blue_dark"
                            android:paddingHorizontal="16dp"
                            android:elevation="2dp" />

                        <Button
                            android:id="@+id/btnPostAuction"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Đấu giá"
                            android:layout_marginStart="8dp"
                            android:backgroundTint="@color/primary_color"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Error Message -->
                <TextView
                    android:id="@+id/tvError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_red_dark"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp"
                    android:padding="12dp"
                    android:background="@drawable/error_background"
                    android:textSize="14sp" />

                <!-- Live Auctions Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="🔴 LIVE AUCTION"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_color" />

                            <TextView
                                android:id="@+id/tvAuctionCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 đấu giá"
                                android:textSize="12sp"
                                android:textColor="@android:color/darker_gray"
                                android:background="@drawable/rounded_button_background"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="4dp" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewAuctions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="200dp"
                            android:scrollbars="vertical"
                            android:overScrollMode="never" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Products Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🛍️ Sản phẩm nổi bật"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tvProductCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 sản phẩm"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:background="@drawable/rounded_button_background"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp" />
                </LinearLayout>

                <!-- Loading States -->
                <LinearLayout
                    android:id="@+id/llProductsLoading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone">

                    <ProgressBar
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="12dp"
                        android:indeterminateTint="@color/primary_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đang tải sản phẩm..."
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/llEmptyState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_shopping_bag"
                        android:alpha="0.5"
                        android:layout_marginBottom="16dp"
                        app:tint="@android:color/darker_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chưa có sản phẩm nào"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hãy là người đầu tiên đăng sản phẩm!"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Products RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="16dp" />

                <!-- General Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:indeterminateTint="@color/primary_color" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
