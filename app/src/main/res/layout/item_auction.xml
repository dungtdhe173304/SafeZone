<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_inventory" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vật phẩm"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá hiện tại: 0 đ"
                android:textColor="@android:color/holo_green_dark"
                android:textStyle="bold"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/tvStartPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá khởi điểm: 0 đ"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bắt đầu: --"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kết thúc: --"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa đăng ký"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/tvParticipants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người tham gia: 0"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvSeller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người bán: --"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="6dp" />

            <Button
                android:id="@+id/btnAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng ký tham gia"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/primary_color" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>


