<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/footer_background"
    android:elevation="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="4dp"
    android:paddingEnd="4dp">

    <!-- Home -->
    <LinearLayout
        android:id="@+id/footer_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/ic_home"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/home"
            android:src="@drawable/ic_home"
            app:tint="@color/footer_icon_color" />

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textSize="10sp"
            android:textColor="@color/footer_text_color"
            android:textStyle="bold"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Products/Shop -->
    <LinearLayout
        android:id="@+id/footer_products"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/ic_products"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_shopping_bag"
            android:contentDescription="@string/products"
            app:tint="@color/footer_icon_color" />

        <TextView
            android:id="@+id/tv_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/products"
            android:textSize="10sp"
            android:textColor="@color/footer_text_color"
            android:textStyle="bold"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Auction -->
    <LinearLayout
        android:id="@+id/footer_auction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/ic_auction"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_gavel"
            android:contentDescription="@string/auction"
            app:tint="@color/footer_icon_color" />

        <TextView
            android:id="@+id/tv_auction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auction"
            android:textSize="10sp"
            android:textColor="@color/footer_text_color"
            android:textStyle="bold"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Wallet/Balance -->
    <LinearLayout
        android:id="@+id/footer_wallet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/ic_wallet"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_wallet"
            android:contentDescription="@string/wallet"
            app:tint="@color/footer_icon_color" />

        <TextView
            android:id="@+id/tv_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet"
            android:textSize="10sp"
            android:textColor="@color/footer_text_color"
            android:textStyle="bold"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Profile -->
    <LinearLayout
        android:id="@+id/footer_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/ic_profile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_person"
            android:contentDescription="@string/profile"
            app:tint="@color/footer_icon_color" />

        <TextView
            android:id="@+id/tv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:textSize="10sp"
            android:textColor="@color/footer_text_color"
            android:textStyle="bold"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</LinearLayout>
