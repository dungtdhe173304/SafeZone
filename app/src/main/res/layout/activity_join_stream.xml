<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.livestreaming.JoinStreamActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¥ Join Live Stream"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter the Stream ID shared by your friend to join their live stream"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Stream ID Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Stream ID"
                app:boxStrokeColor="@color/primary_color"
                app:hintTextColor="@color/primary_color"
                app:startIconDrawable="@android:drawable/ic_menu_share"
                app:startIconTint="@color/primary_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_stream_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:maxLength="50"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Stream ID Validation Info -->
            <TextView
                android:id="@+id/tv_stream_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter a Stream ID to join"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:background="@android:color/white"
                android:elevation="2dp" />

            <!-- Join Button -->
            <Button
                android:id="@+id/btn_join_stream"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸš€ Join Live Stream"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:padding="16dp"
                android:backgroundTint="@color/design_default_color_primary"
                android:enabled="false"
                android:layout_marginBottom="24dp" />

            <!-- Additional Options -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="More Options"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- QR Code Scan Button -->
            <Button
                android:id="@+id/btn_scan_qr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“± Scan QR Code"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:padding="12dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:layout_marginBottom="12dp" />

            <!-- Recent Streams Button -->
            <Button
                android:id="@+id/btn_recent_streams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹ Recent Streams"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:padding="12dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:layout_marginBottom="24dp" />

            <!-- Instructions -->
            <TextView
                android:id="@+id/tv_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to join:\n\n1. Ask your friend to share their Stream ID\n2. Enter the Stream ID above\n3. Click 'Join Live Stream'\n4. Enjoy watching the stream!\n\nðŸ’¡ Tip: Stream IDs are usually shared via WhatsApp, Telegram, or other messaging apps"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:background="@android:color/white"
                android:padding="16dp"
                android:elevation="2dp"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
