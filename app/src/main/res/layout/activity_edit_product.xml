<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_toolbar"
            android:elevation="4dp"
            app:title="Chỉnh sửa sản phẩm"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_back" />

        <!-- Product Images Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ảnh sản phẩm"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="12dp" />

                <!-- Current Images RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCurrentImages"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <!-- Add/Remove Images Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnAddImages"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Thêm ảnh"
                        android:textSize="12sp"
                        android:background="@drawable/gradient_card_blue"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnRemoveImages"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Xóa ảnh"
                        android:textSize="12sp"
                        android:background="@drawable/gradient_card_orange"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Product Info Form -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Product Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Tên sản phẩm"
                    app:boxStrokeColor="@android:color/holo_blue_dark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etProductName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="2" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Description -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Mô tả sản phẩm"
                    app:boxStrokeColor="@android:color/holo_blue_dark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:maxLines="5" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Information -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Thông tin chi tiết"
                    app:boxStrokeColor="@android:color/holo_blue_dark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etInformation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="2"
                        android:maxLines="4" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Price -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Giá (VNĐ)"
                    app:boxStrokeColor="@android:color/holo_blue_dark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Private Info -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Thông tin riêng tư (sẽ được mã hóa)"
                    app:boxStrokeColor="@android:color/holo_blue_dark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPrivateInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="2"
                        android:maxLines="4" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Fee Selection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phí giao dịch:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbSellerFee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Người bán chịu phí"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/rbBuyerFee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Người mua chịu phí" />
                </RadioGroup>

                <!-- Public/Private Selection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quyền xem:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgPublicPrivate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbPublic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Công khai"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/rbPrivate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Riêng tư" />
                </RadioGroup>

                <!-- User View (only visible when private) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilUserView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Danh sách user có thể xem (phân cách bằng dấu phẩy)"
                    android:visibility="gone"
                    app:boxStrokeColor="@android:color/holo_blue_dark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUserView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Hủy"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/gradient_card_orange"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Lưu thay đổi"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/gradient_card_green"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
