<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Transaction Icon -->
        <ImageView
            android:id="@+id/ivTransactionIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_wallet"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            android:contentDescription="Transaction icon"
            tools:backgroundTint="@color/primary_color" />

        <!-- Transaction Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvTransactionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deposit"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:text="Nạp tiền" />

            <TextView
                android:id="@+id/tvTransactionDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="deposit + qua ZaloPay"
                android:textSize="14sp"
                android:textColor="@color/gray"
                tools:text="Nạp tiền qua ZaloPay" />

            <TextView
                android:id="@+id/tvTransactionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Hôm nay, 14:30"
                android:textSize="12sp"
                android:textColor="@color/light_gray"
                tools:text="Hôm nay, 14:30" />

        </LinearLayout>

        <!-- Transaction Amount -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvTransactionAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+500,000 VNĐ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/success_color"
                tools:text="+500,000 VNĐ" />

            <TextView
                android:id="@+id/tvTransactionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/success"
                android:textSize="12sp"
                android:textColor="@color/success_color"
                android:background="@drawable/status_success_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                tools:text="Thành công" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
