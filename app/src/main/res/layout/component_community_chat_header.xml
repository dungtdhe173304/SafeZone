<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/gradient_card_blue"
    android:padding="8dp"
    android:layout_margin="4dp">

    <!-- Chat Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/community_chat_header"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/chat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/community_chat_view_all"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_primary_background"
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Scrolling Message -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/modern_card_background"
        android:padding="8dp">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người dùng"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tin nhắn cộng đồng sẽ chạy từ phải qua trái..."
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:singleLine="true"
            android:ellipsize="end" />

    </LinearLayout>

</LinearLayout>
