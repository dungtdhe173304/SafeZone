<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.livestreaming.LiveStreamingActivity">

    <!-- Top Bar with Share Button -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/primary_color"
        android:padding="16dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_stream_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Live Stream"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center_vertical" />

        <!-- Donate Button - Chỉ hiển thị cho audience -->
        <Button
            android:id="@+id/btn_donate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💝 Donate"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:minWidth="80dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_share_stream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📤 Share"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/primary_color"
            android:padding="8dp"
            android:minWidth="80dp" />

        <!-- Camera and Microphone Check Buttons -->
        <Button
            android:id="@+id/btn_check_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📷 Check"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:minWidth="70dp"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/btn_check_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎤 Check"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:minWidth="70dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Fragment Container for ZEGOCLOUD -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Donate Animation View - Overlay trên livestream -->
    <com.group5.safezone.view.livestreaming.DonateAnimationView
        android:id="@+id/donate_animation_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
